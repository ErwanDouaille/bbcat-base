
set(@UPPERCASE_PROJECT_NAME@_INCLUDE_DIRS @GLOBAL_INCLUDE_DIRS@)
set(@UPPERCASE_PROJECT_NAME@_LIB_DIRS @GLOBAL_LIB_DIRS@)
set(@UPPERCASE_PROJECT_NAME@_FLAGS @GLOBAL_FLAGS@)
set(@UPPERCASE_PROJECT_NAME@_EXTRA_LIBS @GLOBAL_EXTRA_LIBS@)
set(@UPPERCASE_PROJECT_NAME@_OPTIONS @GLOBAL_OPTIONS@)
set(@UPPERCASE_PROJECT_NAME@_DEP_PACKAGES @GLOBAL_DEP_PACKAGES@)

# for each package that's a [bbcat] dependency, use find_package
foreach(PACKAGE ${@UPPERCASE_PROJECT_NAME@_DEP_PACKAGES})
    if(NOT DEFINED FINDING_${PACKAGE})
		set(FINDING_${PACKAGE} 1)
        message("Finding dependant package ${PACKAGE}")
        find_package(${PACKAGE} REQUIRED)
	endif()
endforeach()

# set this package as a dependency of any package that use this package
set(GLOBAL_DEP_PACKAGES
    ${GLOBAL_DEP_PACKAGES}
    @PROJECT_NAME@)

if(NOT TARGET @PROJECT_NAME@ AND NOT @PROJECT_NAME@_BINARY_DIR)
    include("@INSTALL_CMAKE_DIR@/@PROJECT_NAME@Targets.cmake")
endif()

set(@UPPERCASE_PROJECT_NAME@_STATIC_LIBRARIES @PROJECT_NAME@-static-@PROJECT_VERSION_MAJOR@.@PROJECT_VERSION_MINOR@ CACHE STRING "@PROJECT_NAME@ static library")
set(@UPPERCASE_PROJECT_NAME@_LIBRARIES @PROJECT_NAME@-@PROJECT_VERSION_MAJOR@.@PROJECT_VERSION_MINOR@ CACHE STRING "@PROJECT_NAME@ shared library")
